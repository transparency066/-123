
@{
    var controller = ViewContext.RouteData.Values["controller"].ToString().ToLower();
    var action = ViewContext.RouteData.Values["action"].ToString().ToLower();

    string[] lController = new string[] { "screening", "seatslist" };
    string[] Accout = new string[] { "modify","create","hall" };
    string[] user = new string[] { "home", "viewmessage", "wishlist","moviecomment","submitcomplaint","film" };

    if (lController.Contains(controller))
    {
        Layout = "~/Views/Shared/_ListLayout.cshtml";
    }
    else if(Accout.Contains(controller))
    {
        Layout = "~/Views/Shared/_OperationLayout.cshtml";
    }
    else if (user.Contains(controller))
    {
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }
    else
    { Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
}